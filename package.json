{
  "name": "@abw/react-night-and-day",
  "version": "1.0.0-alpha-1",
  "description": "A simple React library for switching between light and dark themes",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/react-night-and-day.umd.cjs",
  "module": "./dist/react-night-and-day.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/react-night-and-day.umd.cjs",
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/react-night-and-day.js"
      }
    },
    "./styles/*": "./dist/styles/*"
  },
  "author": "Andy Wardley",
  "license": "ISC",
  "keywords": [
    "react",
    "theme",
    "switch",
    "light",
    "dark"
  ],
  "scripts": {
    "dev": "vite --config vite.docs.js",
    "test": "vitest --ui --coverage",
    "build": "$npm_execpath build:lib && $npm_execpath build:docs",
    "build:lib": "vite build",
    "build:docs": "vite build --config vite.docs.js",
    "preview": "vite preview --config vite.docs.js",
    "lint": "eslint 'lib/**/*.{js,jsx,ts,tsx}'"
  },
  "homepage": "https://badgerpower.com/react-night-and-day/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abw/react-night-and-day.git"
  },
  "bugs": {
    "url": "https://github.com/abw/react-night-and-day/issues"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@abw/badger-timestamp": "^1.2.0",
    "@abw/badger-utils": "^1.2.1",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.17.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.3",
    "globals": "^15.14.0",
    "jsdom": "^21.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.15.0",
    "react-syntax-highlighter": "^15.5.0",
    "sass": "^1.66.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.19.1",
    "vite": "^6.0.7",
    "vite-plugin-dts": "^4.4.0",
    "vite-plugin-svgr": "^4.3.0",
    "vitest": "^2.1.8"
  }
}
