{
  "name": "@abw/react-night-and-day",
  "version": "0.0.3",
  "description": "A simple React library for switching between light and dark themes",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/react-night-and-day.umd.cjs",
  "module": "./dist/react-night-and-day.js",
  "exports": {
    ".": {
      "import": "./dist/react-night-and-day.js",
      "require": "./dist/react-night-and-day.umd.cjs"
    },
    "./styles/*": "./dist/styles/*"
  },
  "author": "Andy Wardley",
  "license": "ISC",
  "keywords": [
    "react",
    "theme",
    "switch",
    "light",
    "dark"
  ],
  "scripts": {
    "dev": "vite",
    "test": "vitest --ui --coverage",
    "build": "vite build",
    "build:docs": "vite build --outDir docs --config vite.docs.js",
    "preview": "vite preview --outDir docs --config vite.docs.js",
    "lint": "eslint 'src/**/*.{js,jsx}' 'lib/**/*.{js,jsx}'"
  },
  "homepage": "https://abw.github.io/react-night-and-day/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abw/react-night-and-day.git"
  },
  "bugs": {
    "url": "https://github.com/abw/react-night-and-day/issues"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@abw/badger-timestamp": "^1.0.4",
    "@abw/badger-utils": "^1.0.19",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^3.1.0",
    "@vitest/coverage-c8": "^0.31.0",
    "@vitest/ui": "^0.31.0",
    "eslint": "^8.37.0",
    "eslint-plugin-react": "^7.32.2",
    "jsdom": "^21.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.10.0",
    "react-syntax-highlighter": "^15.5.0",
    "sass": "^1.60.0",
    "vite": "^4.2.0",
    "vite-plugin-svgr": "^3.2.0",
    "vitest": "^0.31.0"
  }
}
